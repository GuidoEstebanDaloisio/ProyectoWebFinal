<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Producto</h4>
            <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{productos.id_producto}}" name="id_producto">
                <div class="form-group">
                    <label for="">Cantidad</label>
                    <input type="text" class="form-control" name="cantidad" value="{{productos.cantidad}}">
                </div>
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{productos.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <textarea name="subtitulo" class="form-control">{{productos.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="text" class="form-control" name="precio" value="{{productos.precio}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{productos.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>