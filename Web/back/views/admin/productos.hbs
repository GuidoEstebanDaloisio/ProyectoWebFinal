<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- fin fila 1 --}}


    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Productos</h3>
        </div>
        <div class="col-5 text end">
            <a class="btn btn-success" href="/admin/productos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}


    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Precio</th>      
                        <th scope="col">Imagen</th>                                               

                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id_producto}}</th>
                        <td>{{titulo}}</td>
                        <td>{{cantidad}}</td>
                        <td>${{precio}}</td>     
                        <td>{{{imagen}}}</td>                   
                        <td class="text-center">
                            <a class="btn btn-secondary" href="/admin/productos/modificar/{{id_producto}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id_producto}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>